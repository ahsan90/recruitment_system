<h1>Listing job_categories</h1>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @job_categories.each do |job_category| %>
      <tr>
        <td><%= link_to  "#{job_category.name} (#{job_category.vacancies.count})", job_category %></td>
        <td><%= link_to 'Edit', edit_job_category_path(job_category) %></td>
        <td><%= link_to 'Destroy', job_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job category', new_job_category_path %>
